  "description": "Personal resume",
  "repository": {
    "type": "git",
    "url": "git://github.com:mathiasbosman/cv.git"
  },
  "scripts": {
    "scss": "node-sass --output-style compressed css/ -o css/",
    "minifyJs": "uglifyjs-folder js --output js/all.min.js --pattern \"**/*.js,!**/*min.js\"",
    "build": "npm run scss & npm run minifyJs",
    "clean": "rm -rf node_modules"
  },
  "devDependencies": {
    "node-sass": "^5.0.0",
    "uglifyjs-folder": "^2.0.0"
  }
}
